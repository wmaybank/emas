# Configuración del servidor
NODE_ENV=development
PORT=3001
HOST=localhost

# Configuración de la base de datos
DB_PATH=./data/weather.db
DB_BACKUP_PATH=./backups/

# Configuración de WeatherLink Live
WEATHERLINK_API_KEY=your_api_key_here
WEATHERLINK_API_SECRET=your_api_secret_here
WEATHERLINK_BASE_URL=https://api.weatherlink.com/v2

# Configuración de estaciones UDP
UDP_PORT=22222
UDP_HOST=0.0.0.0

# Configuración de WebSocket
WS_PATH=/ws/realtime
WS_HEARTBEAT_INTERVAL=30000

# Configuración de logging
LOG_LEVEL=info
LOG_MAX_SIZE=5MB
LOG_MAX_FILES=5

# Configuración de seguridad
CORS_ORIGINS=http://localhost:3000,http://ema.chapelco.local,https://ema.chapelco.local
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Configuración de cron jobs
DATA_COLLECTION_INTERVAL=30
UDP_COLLECTION_INTERVAL=2.5

# Configuración de alertas
ALERT_CHECK_INTERVAL=60
ALERT_RETENTION_DAYS=30

# Configuración de reportes
REPORT_GENERATION_ENABLED=true
REPORT_SCHEDULING_ENABLED=true
REPORT_RETENTION_DAYS=90

# Configuración de respaldo
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

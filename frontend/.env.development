# Configuración para Frontend en Desarrollo
# Copiar este archivo como .env.development en el directorio frontend/

# URL del API - en desarrollo apunta al backend local
REACT_APP_API_URL=http://localhost:3001/api

# URL del WebSocket - en desarrollo apunta al backend local
REACT_APP_WS_URL=ws://localhost:3001/ws

# Configuración de la aplicación
REACT_APP_NAME=EMAS Weather System (Dev)
REACT_APP_VERSION=1.0.0-dev

# Configuración de desarrollo
REACT_APP_DEBUG=true

# Configuración de build
GENERATE_SOURCEMAP=true

# Hot reload
FAST_REFRESH=true

# Puerto de desarrollo (opcional)
PORT=3000

# Variables de entorno para Docker Compose
# Estaciones meteorológicas WeatherLink Live
WEATHER_STATIONS=10.20.50.50:80,10.20.50.51:80,10.20.50.52:80

# Configuración de servidor
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Configuración de base de datos
DB_PATH=/app/data/weather.db
DB_BACKUP_PATH=/app/backups/

# Configuración de logging
LOG_LEVEL=info

# Configuración de polling de estaciones
STATION_POLLING_INTERVAL=30
STATION_REQUEST_TIMEOUT=5000

# Configuración UDP
UDP_ENABLED=true
UDP_PORT=22222
UDP_HOST=0.0.0.0
UDP_BROADCAST_INTERVAL=2.5

# Configuración WebSocket
WS_PATH=/ws/realtime

# Configuración CORS
CORS_ORIGINS=http://localhost,http://ema.chapelco.local

# Configuración de backups
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# Configuración de alertas
ALERT_CHECK_INTERVAL=60

# Configuración de recolección de datos
DATA_COLLECTION_INTERVAL=30

# Configuración Redis (opcional)
REDIS_PASSWORD=
